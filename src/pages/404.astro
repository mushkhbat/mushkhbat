---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';

const title = "الصفحة غير موجودة - 404 | مشخبط";
const description = "عذراً، الصفحة التي تبحث عنها غير موجودة. تصفح أعمالنا أو عد إلى الصفحة الرئيسية.";
const image = "/mushkhbat-og-image.jpg";
const imageAlt = "مشخبط - وكالة الحلول الرقمية";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<Layout 
  mainClass="!p-0"
  title="الصفحة غير موجودة - 404 | مشخبط"
  description="عذراً، الصفحة التي تبحث عنها غير موجودة. تصفح أعمالنا أو عد إلى الصفحة الرئيسية."
>
  <div class="min-h-screen bg-gradient-to-br from-violet-950 via-violet-900 to-violet-800 flex items-center justify-center px-2 sm:px-4 overflow-hidden">
    <!-- Background Animation -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/4 left-1/4 w-48 h-48 sm:w-96 sm:h-96 bg-violet-400 rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
      <div class="absolute top-3/4 right-1/4 w-48 h-48 sm:w-96 sm:h-96 bg-violet-300 rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-2000"></div>
      <div class="absolute bottom-1/4 left-1/2 w-48 h-48 sm:w-96 sm:h-96 bg-violet-200 rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-4000"></div>
    </div>

    <div class="relative z-10 text-center max-w-4xl mx-auto px-2">
      <!-- Animated 404 -->
      <div class="mb-12 relative break-words leading-tight pt-8">
        <div class="text-4xl sm:text-5xl md:text-9xl lg:text-[10rem] font-black text-white animate-pulse">
          خطأ
        </div>
        <div class="absolute inset-0 text-6xl sm:text-7xl md:text-9xl lg:text-[12rem] font-black text-white opacity-10 blur-sm">
          404
        </div>
      </div>

      <!-- Main Message -->
      <div class="mb-12 space-y-6">
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-4 animate-fade-in-up">
          أوبس! الصفحة مفقودة
        </h1>
        <p class="text-xl md:text-2xl text-violet-50 mb-6 animate-fade-in-up animation-delay-200 leading-relaxed">
          يبدو أنك تائه في الفضاء الرقمي
        </p>
        <div class="bg-violet-800/50 backdrop-blur-sm rounded-2xl p-6 border border-violet-600/50 animate-fade-in-up animation-delay-400">
          <p class="text-violet-50 text-sm leading-relaxed">
            هذا موقع ثابت وليس تطبيق صفحة واحدة (SPA)<br>
            الصفحة التي تبحث عنها غير موجودة فعلياً
          </p>
        </div>
      </div>

      <!-- Floating Elements -->
      <div class="mb-12 h-64 flex items-center justify-center animate-fade-in-up animation-delay-600">
        <!-- Astronaut/Robot Icon -->
        <div class="relative">
          <div class="w-32 h-32 bg-gradient-to-br from-violet-500 to-violet-400 rounded-full flex items-center justify-center shadow-2xl animate-float">
            <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
            </svg>
          </div>
          <!-- Floating particles -->
          <div class="absolute -top-4 -right-4 w-3 h-3 bg-violet-75 rounded-full animate-ping"></div>
          <div class="absolute -bottom-4 -left-4 w-2 h-2 bg-violet-100 rounded-full animate-ping animation-delay-1000"></div>
          <div class="absolute top-8 -left-8 w-1 h-1 bg-violet-50 rounded-full animate-ping animation-delay-2000"></div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex justify-center items-center mb-12 animate-fade-in-up animation-delay-800">
        <!-- Dynamic Go Back Button (hidden by default) -->
        <a 
          id="goBackBtn"
          href=""
          role="button"
          hidden
          class="group relative bg-gradient-to-r from-violet-500 to-violet-400 hover:from-violet-400 hover:to-violet-300 text-white px-8 py-4 rounded-2xl font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-violet-500/25 inline-flex items-center"
        >
          <svg class="w-5 h-5 ml-3 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          العودة للخلف
          <div class="absolute inset-0 bg-gradient-to-r from-violet-500 to-violet-400 rounded-2xl blur opacity-30 group-hover:opacity-50 transition-opacity"></div>
        </a>
      </div>
    </div>
  </div>

  <style>
    /* Floating animations */
    @keyframes float {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-20px);
      }
    }

    @keyframes fade-in-up {
      0% {
        opacity: 0;
        transform: translateY(30px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-float {
      animation: float 3s ease-in-out infinite;
    }

    .animate-fade-in-up {
      animation: fade-in-up 0.8s ease-out forwards;
    }

    .animation-delay-200 {
      animation-delay: 0.2s;
    }

    .animation-delay-400 {
      animation-delay: 0.4s;
    }

    .animation-delay-600 {
      animation-delay: 0.6s;
    }

    .animation-delay-800 {
      animation-delay: 0.8s;
    }

    .animation-delay-1000 {
      animation-delay: 1s;
    }

    .animation-delay-2000 {
      animation-delay: 2s;
    }

    .animation-delay-4000 {
      animation-delay: 4s;
    }
  </style>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      const goBackBtn = document.getElementById('goBackBtn');
      const currentOrigin = window.location.origin;
      
      if (goBackBtn && window.history.length > 1 && document.referrer) {
        try {
          const referrerUrl = new URL(document.referrer);
          const referrerOrigin = referrerUrl.origin;
          
          if (referrerOrigin === currentOrigin) {
            goBackBtn.href = document.referrer;
            goBackBtn.removeAttribute('hidden');
          }
        } catch (error) {
          console.log('Invalid referrer URL');
        }
      }
    });
  </script>
</Layout> 